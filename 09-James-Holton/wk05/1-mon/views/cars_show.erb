<h1>
    <%= @car.make %> <%= @car.model %>
</h1>

<h3>
    Make: <span><%= @car.make %></span>
</h3>

<h3>
    Model: <span><%= @car.model %></span>
</h3>

<h3>
    Body: <span><%= @car.body %></span>
</h3>

<h3>
    Color: <span><%= @car.color %></span>
</h3>

<h3>
    Year: <span><%= @car.year %></span>
</h3>

<h3>
    Kilometres: <span><%= @car.kilometres %>km</span>
</h3>

<h3>
    Transmission: <span><%= @car.transmission %></span>
</h3>

<h3>
    Engine 'cc': <span><%= @car.engine/1000.0 %>L</span>
</h3>

<% if @car.company.present? %>
<h3>
    Volkswagen:
    <a href="/companies/<%= @car.company_id %>">
    <%= @car.company.name %>
    </a>
</h3>
<% end %>

<% unless @car.image.nil? || @car.image.empty? %>
<h3>
    Image: <img src="<%= @car.image %>" alt="">
</h3>
<% end %>

<div class="controls">
    <a href="/cars/<%= @car.id %>/edit">Edit</a>
    <a href="/cars/<%= @car.id %>/delete">Delete</a>
</div>